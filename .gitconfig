[user]
[alias]
    co = checkout
    tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"

[core]
    editor = nvim
	pager = LESSCHARSET=utf-8 less

[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "vimdiff"]
    path = nvim

[merge]
    tool = vimdiff
[mergetool]
    prompt = false
[mergetool "vimdiff"]
    path = nvim

